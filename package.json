{
  "name": "@hal313/promiseifyish",
  "version": "1.0.4",
  "description": "Adds promise style notation to Firebase style functions",
  "homepage": "https://github.com/hal313/promiseifyish",
  "main": "dist/Promiseifyish.js",
  "bugs": {
    "url": "https://github.com/hal313/promiseifyish/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hal313/promiseifyish.git"
  },
  "keywords": [
    "promise",
    "callback",
    "javascript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "build": "npm run clean && babel src -d dist",
    "dist": "npm run build && uglifyjs --compress --mangle --source-map -o dist/Promiseifyish.min.js dist/Promiseifyish.js",
    "develop": "npm run dist && npm test",
    "site": "cp src/Promiseifyish.js docs/scripts/src && cp dist/* docs/scripts/dist",
    "watch:build": "npm-watch build",
    "watch:dist": "npm-watch dist",
    "watch:develop": "npm-watch develop",
    "release": "ext/scripts/release.sh --skip-push"
  },
  "author": "John R. Ghidiu",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-modules-umd": "^7.2.0",
    "@babel/preset-env": "^7.4.4",
    "auto-changelog": "^1.13.0",
    "jest": "^24.7.1",
    "npm-watch": "^0.6.0",
    "uglify-js": "^3.5.10"
  },
  "auto-changelog": {
    "unreleased": false,
    "commitLimit": false
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-modules-umd"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "build/reports",
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 90,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "dist/**/*.js"
    ],
    "roots": [
      "src",
      "dist",
      "test"
    ],
    "testRegex": [
      "test/.*-spec.js"
    ]
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ]
    },
    "dist": {
      "patterns": [
        "src",
        "test"
      ]
    },
    "develop": {
      "patterns": [
        "src",
        "test"
      ]
    }
  }
}
